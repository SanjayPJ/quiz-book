<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alpha=".9"
        android:background="@drawable/background"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1"
                android:textAllCaps="true"
                android:textColor="#E91E63"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Who is currently CEO of Apple?" />

            <RadioGroup
                android:id="@+id/radioSex"
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/qRadOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tim Cook" />

                <RadioButton
                    android:id="@+id/qRadTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satya Nadella" />
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 2"
                android:textAllCaps="true"
                android:textColor="#E91E63"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Who is the CEO of Google 2019?" />

            <RadioGroup
                android:id="@+id/radioSex23"
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/q2RadOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Larry Page" />

                <RadioButton
                    android:id="@+id/q2RadTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sundar Pichai" />

            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 3"
                android:textAllCaps="true"
                android:textColor="#E91E63"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Founders of google?" />

            <CheckBox
                android:id="@+id/q3CheckOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sergey Brin" />

            <CheckBox
                android:id="@+id/q3CheckTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sundar Pichai" />

            <CheckBox
                android:id="@+id/q3CheckThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Larry Page" />

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/textView411"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 4"
                android:textAllCaps="true"
                android:textColor="#E91E63"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView311"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Who is the first person who climb Mount Everest?" />

            <CheckBox
                android:id="@+id/q4CheckOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Junko Tabei" />

            <CheckBox
                android:id="@+id/q4CheckTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tenzing Norgay" />

            <CheckBox
                android:id="@+id/q4CheckThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edmund Hillary" />


            <TextView
                android:paddingTop="10dp"
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 5"
                android:textAllCaps="true"
                android:textColor="#E91E63"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Highest mountain in the world?" />

            <EditText
                android:id="@+id/q5EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#E91E63"
                android:onClick="check_all"
                android:text="Submit"
                android:textColor="#ffff" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>